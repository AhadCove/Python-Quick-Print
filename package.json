{
    "name": "python-quick-print",
    "displayName": "Python Quick Print",
    "description": "Quickly print out log messages",
    "version": "0.0.1",
    "publisher": "AhadCove",
    "author": {
        "name": "Ahad Cove"
    },
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#C80000",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Programming Languages", "Debuggers", "Other"
    ],
    "keywords": [
        "Python", "Print", "Log"
    ],
    "activationEvents": [
        "onCommand:extension.print"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:python"
    ],
    "contributes": {
         "languages": [{
            "id": "python",
            "aliases": ["Python", "Python3", "Python2"],
            "extensions": [".py"]
        }],
        "commands": [
            {
                "command": "extension.print",
                "title": "Print Python Selection"
            }
        ],
        "keybindings": [
            {
                "command": "extension.print",
                "key": "shift+ctrl+l",
                "mac": "shift+cmd+l",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
